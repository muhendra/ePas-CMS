@using e_Pas_CMS.ViewModels
@using System.Globalization
@model SchedulerIndexViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";

    int totalPages = Model.TotalPages;
    int currentPage = Model.CurrentPage;
    int windowSize = 10;

    int currentWindow = (int)Math.Ceiling((double)currentPage / windowSize);
    int startPage = (currentWindow - 1) * windowSize + 1;
    int endPage = Math.Min(startPage + windowSize - 1, totalPages);

    var selectedStatus = ViewBag.FilterStatus as string;
    var selectedMonth = ViewBag.FilterMonth as int?;
    var selectedYear = ViewBag.FilterYear as int?;
    var currentYear = DateTime.Now.Year;

    // Route values agar semua filter ikut saat klik pagination
    var routeFilters = new
    {
        searchTerm = Model.SearchTerm,
        pageSize = Model.PageSize,
        filterStatus = selectedStatus,
        filterMonth = selectedMonth,
        filterYear = selectedYear
    };
}

<div class="mt-4 px-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="fw-bold">Penjadwalan Audit</h3>
        <div class="d-flex align-items-center gap-2">
            <form asp-action="RunAutoSchedule" asp-controller="Scheduler" method="post" class="d-inline"
                  onsubmit="return confirm('Jalankan auto-scheduler sekarang?');">
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-success">
                    <i class="bi bi-play-circle me-1"></i> Run Scheduler
                </button>
            </form>

            <a href="@Url.Action("Add", "Scheduler")" class="btn btn-primary">
                <i class="bi bi-plus-lg me-1"></i> Tambah Jadwal
            </a>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <form method="get" class="row g-2 mb-4">
        <div class="col-md-4">
            <input type="text" name="searchTerm" value="@Model.SearchTerm" class="form-control" placeholder="Cari no. SPBU atau auditor..." />
        </div>

        <div class="col-auto" style="min-width: 200px;">
            <select name="filterStatus" class="form-select w-100">
                <option value="">📌 Status</option>
                @{
                    var statuses = new Dictionary<string, string>
                {
                { "DRAFT", "Draft" },
                { "NOT_STARTED", "Belum Dimulai" },
                { "IN_PROGRESS_INPUT", "Sedang Berlangsung (Input)" },
                { "IN_PROGRESS_SUBMIT", "Sedang Berlangsung (Submit)" },
                { "UNDER_REVIEW", "Sedang Ditinjau" },
                { "VERIFIED", "Terverifikasi" }
                };

                    foreach (var status in statuses)
                    {
                        var isSelected = selectedStatus == status.Key ? "selected" : "";
                        @Html.Raw($"<option value='{status.Key}' {isSelected}>{status.Value}</option>")
                    }
                }
            </select>
        </div>

        <div class="col-auto" style="min-width: 180px;">
            <select name="filterMonth" class="form-select w-100">
                <option value="">📅 Bulan</option>
                @for (int m = 1; m <= 12; m++)
                {
                    var monthName = CultureInfo.CurrentCulture.DateTimeFormat.GetMonthName(m);
                    var isSelected = selectedMonth == m ? "selected" : "";
                    @Html.Raw($"<option value='{m}' {isSelected}>{monthName}</option>")
                }
            </select>
        </div>

        <div class="col-auto" style="min-width: 140px;">
            <select name="filterYear" class="form-select w-100">
                <option value="">📆 Tahun</option>
                @for (int y = currentYear; y >= currentYear - 5; y--)
                {
                    var isSelected = selectedYear == y ? "selected" : "";
                    @Html.Raw($"<option value='{y}' {isSelected}>{y}</option>")
                }
            </select>
        </div>

        <div class="col-auto">
            <button type="submit" class="btn btn-outline-primary"><i class="bi bi-search"></i> Cari</button>
            <a href="@Url.Action("Index")" class="btn btn-outline-secondary ms-1">Reset</a>
        </div>
    </form>

    <div class="table-responsive">
        <table class="table table-hover align-middle">
            <thead class="table-light">
                <tr class="align-middle text-center">
                    <th>No</th>
                    <th>Status</th>
                    <th>Auditor</th>
                    <th>Tanggal Audit</th>
                    <th>Tipe Audit</th>
                    <th>Level</th>
                    <th>SPBU</th>
                    <th>No Report</th>
                    <th>Aksi</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int index = (Model.CurrentPage - 1) * Model.PageSize + 1;
                }
                @foreach (var item in Model.Items)
                {
                    <tr class="text-center">
                        <td>@index</td>
                        <td class="fw-semibold" style="color:@GetStatusColor(item.Status)">
                            @item.Status
                        </td>
                        <td>@item.AppUserName</td>
                        <td>@item.AuditDate.ToString("dd/MM/yyyy")</td>
                        <td>@item.AuditType</td>
                        <td>@item.AuditLevel</td>
                        <td>@item.SpbuNo</td>
                        <td>@item.ReportNo</td>
                        <td>
                            <a href="@Url.Action("Detail", "Scheduler", new { id = item.Id })" class="btn btn-sm btn-outline-primary me-1">
                                <i class="bi bi-eye me-1"></i> Detail
                            </a>
                            <a href="@Url.Action("Edit", "Scheduler", new { id = item.Id })" class="btn btn-sm btn-outline-secondary me-1">
                                <i class="bi bi-pencil me-1"></i> Edit
                            </a>
                            <form method="post" asp-action="Delete" asp-controller="Scheduler" asp-route-id="@item.Id"
                                  onsubmit="return confirm('Yakin ingin menghapus jadwal ini?')" class="d-inline">
                                <button type="submit" class="btn btn-sm btn-outline-danger">
                                    <i class="bi bi-trash me-1"></i> Delete
                                </button>
                            </form>
                        </td>
                    </tr>
                    index++;
                }
            </tbody>
        </table>
    </div>

    <!-- Label Total -->
    <div class="mt-2 text-muted">
        Total: @Model.TotalItems jadwal
    </div>

    <nav class="mt-3">
        <ul class="pagination justify-content-start">
            @if (startPage > 1)
            {
                <li class="page-item">
                    <a class="page-link"
                       href="@Url.Action("Index", new {
                            pageNumber = startPage - 1,
                            routeFilters.searchTerm,
                            routeFilters.pageSize,
                            routeFilters.filterStatus,
                            routeFilters.filterMonth,
                            routeFilters.filterYear
                       })">« Prev</a>
                </li>
            }

            @for (int i = startPage; i <= endPage; i++)
            {
                <li class="page-item @(i == currentPage ? "active" : "")">
                    <a class="page-link"
                       href="@Url.Action("Index", new {
                            pageNumber = i,
                            routeFilters.searchTerm,
                            routeFilters.pageSize,
                            routeFilters.filterStatus,
                            routeFilters.filterMonth,
                            routeFilters.filterYear
                       })">@i</a>
                </li>
            }

            @if (endPage < totalPages)
            {
                <li class="page-item">
                    <a class="page-link"
                       href="@Url.Action("Index", new {
                            pageNumber = endPage + 1,
                            routeFilters.searchTerm,
                            routeFilters.pageSize,
                            routeFilters.filterStatus,
                            routeFilters.filterMonth,
                            routeFilters.filterYear
                       })">Next »</a>
                </li>
            }
        </ul>
    </nav>
</div>

@section Scripts {
    <script>
        setTimeout(function () {
            var alert = document.querySelector('.alert');
            if (alert) {
                var bsAlert = bootstrap.Alert.getOrCreateInstance(alert);
                bsAlert.close();
            }
        }, 5000);
    </script>
}

@functions {
    string GetStatusColor(string status)
    {
        return status switch
        {
            "Belum Dimulai" => "#000000",
            "Sedang Berlangsung (Input)" => "#fbbf24",
            "Sedang Berlangsung (Submit)" => "#f59e0b",
            "Sedang Ditinjau" => "#3b82f6",
            "Terverifikasi" => "#10b981",
            _ => "#000"
        };
    }
}
