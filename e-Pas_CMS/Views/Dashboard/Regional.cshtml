@using e_Pas_CMS.ViewModels
@using System.Globalization
@model PaginationModel<AuditReportListViewModel>

@{
    ViewBag.Title = "Dashboard Audit Regional";
    Layout = "~/Views/Shared/_Layout.cshtml";

    int totalPages = (int)Math.Ceiling((decimal)Model.TotalItems / Model.PageSize);
    int currentPage = Model.PageNumber;
    int windowSize = 10;
    int currentWindow = (int)Math.Ceiling((double)currentPage / windowSize);
    int startPage = (currentWindow - 1) * windowSize + 1;
    int endPage = Math.Min(startPage + windowSize - 1, totalPages);

    string selectedRegion = ViewBag.SelectedRegion as string;
}

@section Styles {
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <style>
        #audit-table_wrapper {
            overflow-x: auto;
        }

        .table thead th {
            background-color: #f1f3f5;
            font-weight: 600;
            text-align: center;
            vertical-align: middle;
        }

        .table td, .table th {
            vertical-align: middle !important;
            font-size: 14px;
        }

        .table-hover tbody tr:hover {
            background-color: #f8f9fa;
        }

        .dataTables_wrapper .dataTables_filter {
            display: none;
        }

        .pagination .page-link {
            font-weight: 500;
        }

        .badge.text-bg-success {
            background-color: var(--bs-success) !important;
            color: #fff !important;
        }

        .badge.text-bg-warning {
            background-color: var(--bs-warning) !important;
            color: #000 !important;
        }

        .badge.text-bg-danger {
            background-color: var(--bs-danger) !important;
            color: #fff !important;
        }

        .badge.text-bg-dark {
            background-color: var(--bs-dark) !important;
            color: #fff !important;
        }

        .badge.text-bg-secondary {
            background-color: var(--bs-secondary) !important;
            color: #fff !important;
        }
    </style>
}

<div class="container-fluid px-4 py-5">
    <h4 class="fw-bold mb-4">
        Audit SPBU Berdasarkan Regional
        @if (!string.IsNullOrWhiteSpace(selectedRegion))
        {
            <span class="text-primary">(@selectedRegion)</span>
        }
    </h4>

    <!-- FORM: kirim ke action 'Regional' dengan parameter 'filterregion' -->
    <form method="get" asp-action="Regional" asp-controller="Dashboard" class="row g-3 mb-4">
        <div class="col-md-6">
            <select name="filterregion" class="form-select">
                <option value="">-- Semua Regional --</option>
                @{
                    var romans = new[] { "I", "II", "III", "IV", "V", "VI", "VII", "VIII" };
                    foreach (var reg in romans)
                    {
                        var isSel = string.Equals(selectedRegion, reg, StringComparison.OrdinalIgnoreCase);
                        if (isSel)
                        {
                            <option value="@reg" selected="selected">@reg</option>
                        }
                        else
                        {
                            <option value="@reg">@reg</option>
                        }
                    }
                }
            </select>
        </div>
        <div class="col-md-3">
            <button type="submit" class="btn btn-primary w-100">Filter</button>
        </div>
    </form>

    <div class="table-responsive">
        <table id="regional-table" class="table table-striped table-hover text-nowrap align-middle text-center w-100">
            <thead class="table-light">
                <tr>
                    <th>No</th>
                    <th>No. SPBU</th>
                    <th>Rayon</th>
                    <th>Provinsi</th>
                    <th>Kabupaten/Kota</th>
                    <th>Alamat</th>
                    <th>Tipe SPBU</th>
                    <th>Tahun</th>
                    <th>Audit</th>
                    <th>Tipe Audit</th>
                    <th>Tanggal Audit</th>
                    <th>Score</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Items.Count; i++)
                {
                    var item = Model.Items[i];
                    <tr>
                        <td>@(i + 1)</td>
                        <td>@item.SpbuNo</td>
                        <td>@item.Region</td>
                        <td>@item.Provinsi</td>
                        <td>@item.City</td>
                        <td class="text-start">@item.Address</td>
                        <td>@item.KelasSpbu</td>
                        <td>@item.Year</td>
                        <td>@item.Auditlevel</td>
                        <td>@item.AuditType</td>
                        <td>@item.AuditDate?.ToString("dd/MM/yyyy")</td>
                        <td>@item.Score?.ToString("0.00")</td>
                        <td>
                            <span class="badge @GetStatusBadgeClass(item.Status)">
                                @(string.IsNullOrWhiteSpace(item.Status) ? "-" : item.Status)
                            </span>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <br />
    <div class="d-flex justify-content-end mb-2">
        <div style="font-weight: bold; font-size: 18px;">
            Total Data: @Model.TotalItems
        </div>
    </div>

    @if (totalPages > 1)
    {
        <nav class="mt-4">
            <ul class="pagination justify-content-start flex-wrap">
                @if (currentPage > 1)
                {
                    <li class="page-item">
                        <a class="page-link"
                           asp-controller="Dashboard"
                           asp-action="Regional"
                           asp-route-pageNumber="1"
                           asp-route-pageSize="@Model.PageSize"
                           asp-route-filterregion="@(selectedRegion)">First</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link"
                           asp-controller="Dashboard"
                           asp-action="Regional"
                           asp-route-pageNumber="@(currentPage - 1)"
                           asp-route-pageSize="@Model.PageSize"
                           asp-route-filterregion="@(selectedRegion)">&laquo;</a>
                    </li>
                }

                @for (int i = startPage; i <= endPage; i++)
                {
                    <li class="page-item @(i == currentPage ? "active" : "")">
                        <a class="page-link"
                           asp-controller="Dashboard"
                           asp-action="Regional"
                           asp-route-pageNumber="@i"
                           asp-route-pageSize="@Model.PageSize"
                           asp-route-filterregion="@(selectedRegion)">@i</a>
                    </li>
                }

                @if (currentPage < totalPages)
                {
                    <li class="page-item">
                        <a class="page-link"
                           asp-controller="Dashboard"
                           asp-action="Regional"
                           asp-route-pageNumber="@(currentPage + 1)"
                           asp-route-pageSize="@Model.PageSize"
                           asp-route-filterregion="@(selectedRegion)">&raquo;</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link"
                           asp-controller="Dashboard"
                           asp-action="Regional"
                           asp-route-pageNumber="@totalPages"
                           asp-route-pageSize="@Model.PageSize"
                           asp-route-filterregion="@(selectedRegion)">Last</a>
                    </li>
                }
            </ul>
        </nav>
    }
</div>

@section Scripts {
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            $('#regional-table').DataTable({
                paging: false,
                info: false,
                searching: false,
                ordering: true,
                responsive: true
            });
        });
    </script>
}

@functions {
    public static string GetStatusBadgeClass(string? statusRaw)
    {
        var s = (statusRaw ?? "").Trim().ToUpperInvariant();
        switch (s)
        {
            case "DRAFT": return "bg-dark text-white";
            case "VERIFIED": return "bg-success text-white";
            case "UNDER_REVIEW": return "bg-warning text-dark";
            case "IN_PROGRESS_INPUT": return "bg-warning text-dark";
            case "NOT_STARTED": return "bg-secondary text-white";
            case "DELETED": return "bg-danger text-white";
            default: return "bg-light text-dark";
        }
    }
}
