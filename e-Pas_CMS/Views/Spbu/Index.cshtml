@model List<e_Pas_CMS.ViewModels.SpbuViewModel>

<h3 class="mb-4 fw-bold">Review Audit</h3>

<div class="mb-3">
    <input type="text" class="form-control" placeholder="Cari">
</div>

<div class="d-flex justify-content-between mb-3">
    <div>Tanggal Submit: <strong class="text-primary">Minggu ini</strong></div>
    <div>Status: <strong class="text-primary">Semua</strong></div>
</div>

<div class="table-responsive">
    <table class="table table-bordered align-middle text-center">
        <thead class="table-light">
            <tr>
                <th>No. SPBU</th>
                <th>Nama Auditor</th>
                <th>Provinsi</th>
                <th>Kabupaten/Kota</th>
                <th>Report</th>
                <th>Tanggal Submit</th>
                <th>Type Audit</th>
                <th>Status</th>
                <th>Komplain</th>
                <th>Banding</th>
                <th>Edit</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.NoSpbu</td>
                    <td>@item.NamaAuditor</td>
                    <td>@item.Provinsi</td>
                    <td>@item.Kota</td>
                    <td>@item.Report</td>
                    <td>@item.TanggalSubmit.ToString("dd/MM/yyyy HH:mm")</td>
                    <td>@item.Type</td>
                    <td class="fw-bold text-@((item.Status == "PASS") ? "success" : "danger")">@item.Status</td>
                    <td class="text-@((item.Komplain == "ADA") ? "danger" : "success")">@item.Komplain</td>
                    <td class="text-@((item.Banding == "ADA") ? "danger" : "success")">@item.Banding</td>
                    <td>
                        <a class="text-primary fw-semibold" asp-controller="Audit" asp-action="Detail" asp-route-id="@item.Id">Lihat Detail</a>
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>

<nav>
    <ul class="pagination justify-content-end">
        <li class="page-item disabled"><a class="page-link">&laquo;</a></li>
        <li class="page-item active"><a class="page-link">1</a></li>
        <li class="page-item"><a class="page-link">2</a></li>
        <li class="page-item"><a class="page-link">3</a></li>
        <li class="page-item"><a class="page-link">4</a></li>
        <li class="page-item"><a class="page-link">5</a></li>
        <li class="page-item"><a class="page-link">&raquo;</a></li>
    </ul>
</nav>