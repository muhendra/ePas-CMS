@model e_Pas_CMS.Models.spbu

@{
    ViewData["Title"] = "Edit Data SPBU";
}

<style>
    /* sama seperti Create */
    .card-soft {
        border: 1px solid #e9ecef;
        border-radius: 14px;
    }

        .card-soft .card-header {
            background: #fff;
            border-bottom: 1px solid #f1f3f5;
        }

    .form-control, .form-select {
        height: 44px;
        border-radius: 10px;
    }

    .icon-end {
        position: absolute;
        right: 12px;
        top: 50%;
        transform: translateY(-50%);
        pointer-events: none;
        opacity: .6;
    }

    .required::after {
        content: " *";
        color: #dc3545;
        font-weight: 600;
    }
</style>

<h2 class="fw-bold mb-4">@ViewData["Title"]</h2>

<form asp-action="Edit" method="post" class="needs-validation" novalidate style="max-width: 980px;">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="id" />

    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

    <div class="card card-soft shadow-sm mb-4">
        <div class="card-header d-flex align-items-center justify-content-between">
            <span class="fw-semibold">Informasi SPBU</span>
        </div>
        <div class="card-body">
            <div class="row g-3">
                <!-- Required -->
                <div class="col-lg-6">
                    <label class="form-label fw-bold required">SPBU No</label>
                    <input asp-for="spbu_no" class="form-control" />
                    <span asp-validation-for="spbu_no" class="text-danger small"></span>
                </div>

                <div class="col-lg-6">
                    <label class="form-label fw-bold required">Rayon</label>
                    <input asp-for="region" class="form-control" />
                    <span asp-validation-for="region" class="text-danger small"></span>
                </div>

                <div class="col-lg-6">
                    <label class="form-label fw-bold required">Provinsi</label>
                    <input asp-for="province_name" class="form-control" />
                    <span asp-validation-for="province_name" class="text-danger small"></span>
                </div>

                <div class="col-lg-6">
                    <label class="form-label fw-bold required">Kota/Kabupaten</label>
                    <input asp-for="city_name" class="form-control" />
                    <span asp-validation-for="city_name" class="text-danger small"></span>
                </div>

                <!-- Optional -->
                <div class="col-12">
                    <label asp-for="address" class="form-label fw-bold">Alamat</label>
                    <input asp-for="address" class="form-control" />
                </div>

                <div class="col-lg-6">
                    <label asp-for="owner_name" class="form-label fw-bold">Nama Pemilik</label>
                    <input asp-for="owner_name" class="form-control" />
                </div>

                <div class="col-lg-6">
                    <label asp-for="manager_name" class="form-label fw-bold">Nama Pengelola</label>
                    <input asp-for="manager_name" class="form-control" />
                </div>

                <div class="col-lg-6">
                    <label asp-for="owner_type" class="form-label fw-bold">Tipe Pemilik</label>
                    <input asp-for="owner_type" class="form-control" />
                </div>

                <div class="col-lg-3">
                    <label asp-for="quater" class="form-label fw-bold">Kuartal</label>
                    <input asp-for="quater" class="form-control" type="number" min="1" max="4" />
                </div>

                <div class="col-lg-6">
                    <label class="form-label">Tahun</label>
                    <input asp-for="year"
                           class="form-control"
                           type="number"
                           step="1"
                           min="1900"
                           max="@(DateTime.Now.Year + 1)"
                           inputmode="numeric"
                           placeholder="Masukkan Tahun (angka)" />
                    <span asp-validation-for="year" class="text-danger small"></span>
                </div>

                <div class="col-lg-6">
                    <label asp-for="mor" class="form-label fw-bold">MOR</label>
                    <input asp-for="mor" class="form-control" />
                </div>

                <div class="col-lg-6">
                    <label asp-for="sales_area" class="form-label fw-bold">Sales Area</label>
                    <input asp-for="sales_area" class="form-control" />
                </div>

                <div class="col-lg-6">
                    <label asp-for="sbm" class="form-label fw-bold">SBM</label>
                    <input asp-for="sbm" class="form-control" />
                </div>

                <div class="col-lg-6">
                    <label asp-for="sam" class="form-label fw-bold">SAM</label>
                    <input asp-for="sam" class="form-control" />
                </div>

                <div class="col-lg-6">
                    <label asp-for="type" class="form-label fw-bold">Tipe</label>
                    <input asp-for="type" class="form-control" />
                </div>

                <div class="col-lg-6">
                    <label asp-for="level" class="form-label fw-bold">Level</label>
                    <input asp-for="level" class="form-control" />
                </div>

                <div class="col-lg-6">
                    <label asp-for="phone_number_1" class="form-label fw-bold">Telepon 1</label>
                    <input asp-for="phone_number_1" class="form-control" type="tel" />
                </div>

                <div class="col-lg-6">
                    <label asp-for="phone_number_2" class="form-label fw-bold">Telepon 2</label>
                    <input asp-for="phone_number_2" class="form-control" type="tel" />
                </div>

                <div class="col-lg-6">
                    <label asp-for="latitude" class="form-label fw-bold">Latitude</label>
                    <input asp-for="latitude" class="form-control" type="number" step="any" />
                </div>

                <div class="col-lg-6">
                    <label asp-for="longitude" class="form-label fw-bold">Longitude</label>
                    <input asp-for="longitude" class="form-control" type="number" step="any" />
                </div>

                <div class="col-lg-6">
                    <label asp-for="audit_current" class="form-label fw-bold">Audit Saat Ini</label>
                    <input asp-for="audit_current" class="form-control" />
                </div>

                <div class="col-lg-6">
                    <label class="form-label fw-bold">Audit Berikutnya</label>
                    <div class="position-relative">
                        <select asp-for="audit_next" class="form-select" asp-items="ViewBag.AuditLevels">
                            <option value="">-- Pilih Audit Level --</option>
                        </select>
                        <i class="bi bi-chevron-down icon-end"></i>
                    </div>
                    <span asp-validation-for="audit_next" class="text-danger small"></span>
                </div>

                <div class="col-lg-6">
                    <label asp-for="status_good" class="form-label fw-bold">Status Good</label>
                    <input asp-for="status_good" class="form-control" />
                </div>

                <div class="col-lg-6">
                    <label asp-for="status_excellent" class="form-label fw-bold">Status Excellent</label>
                    <input asp-for="status_excellent" class="form-control" />
                </div>

                <div class="col-lg-6">
                    <label asp-for="audit_current_score" class="form-label fw-bold">Skor Audit Saat Ini</label>
                    <input asp-for="audit_current_score" class="form-control" type="number" step="0.01" />
                </div>

                <div class="col-lg-6">
                    <label asp-for="audit_current_time" class="form-label fw-bold">Waktu Audit Saat Ini</label>
                    <input asp-for="audit_current_time" asp-format="{0:yyyy-MM-ddTHH:mm}" class="form-control" type="datetime-local" />
                </div>

                <div class="col-lg-6">
                    <label class="form-label fw-bold">Status</label>
                    <div class="position-relative">
                        <select asp-for="status" class="form-select">
                            <option value="">Pilih Status</option>
                            <option value="ACTIVE" selected="@(Model.status?.ToUpper() == "ACTIVE")">ACTIVE</option>
                            <option value="INACTIVE" selected="@(Model.status?.ToUpper() == "INACTIVE")">INACTIVE</option>
                        </select>
                        <i class="bi bi-chevron-down icon-end"></i>
                    </div>
                    <span asp-validation-for="status" class="text-danger small"></span>
                </div>

                <div class="col-lg-6">
                    <label asp-for="wtms" class="form-label fw-bold">WTMS</label>
                    <input asp-for="wtms" class="form-control" type="number" step="0.01" />
                </div>

                <div class="col-lg-6">
                    <label asp-for="qq" class="form-label fw-bold">QQ</label>
                    <input asp-for="qq" class="form-control" type="number" step="0.01" />
                </div>

                <div class="col-lg-6">
                    <label asp-for="wmef" class="form-label fw-bold">WMEF</label>
                    <input asp-for="wmef" class="form-control" type="number" step="0.01" />
                </div>

                <div class="col-lg-6">
                    <label asp-for="format_fisik" class="form-label fw-bold">Format Fisik</label>
                    <input asp-for="format_fisik" class="form-control" type="number" step="0.01" />
                </div>

                <div class="col-lg-6">
                    <label asp-for="cpo" class="form-label fw-bold">CPO</label>
                    <input asp-for="cpo" class="form-control" type="number" step="0.01" />
                </div>
            </div>
        </div>
    </div>

    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-warning text-white">
            <i class="bi bi-save"></i> Update
        </button>
        <a asp-action="Index" class="btn btn-secondary">Kembali</a>
    </div>
</form>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
        <i class="bi bi-check-circle me-1"></i> @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // auto-dismiss success alert
        setTimeout(() => {
            const al = document.querySelector('.alert-success');
            if (al) al.remove();
        }, 4000);
    </script>
}
