@model e_Pas_CMS.Models.spbu

@{
    ViewData["Title"] = "Edit Data SPBU";
}

<h2 class="fw-bold mb-4">@ViewData["Title"]</h2>

<form asp-action="Edit" method="post" class="mb-5 needs-validation" novalidate style="max-width: 900px;">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="id" />

    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
    <div class="vstack gap-3">

        <!-- Required -->
        <div>
            <label asp-for="spbu_no" class="form-label fw-bold"></label>
            <input asp-for="spbu_no" class="form-control" />
            <span asp-validation-for="spbu_no" class="text-danger small"></span>
        </div>
        <div>
            <label asp-for="region" class="form-label fw-bold"></label>
            <input asp-for="region" class="form-control" />
            <span asp-validation-for="region" class="text-danger small"></span>
        </div>
        <div>
            <label asp-for="province_name" class="form-label fw-bold"></label>
            <input asp-for="province_name" class="form-control" />
            <span asp-validation-for="province_name" class="text-danger small"></span>
        </div>
        <div>
            <label asp-for="city_name" class="form-label fw-bold"></label>
            <input asp-for="city_name" class="form-control" />
            <span asp-validation-for="city_name" class="text-danger small"></span>
        </div>

        <!-- Optional -->
        <div><label asp-for="address" class="form-label fw-bold"></label><input asp-for="address" class="form-control" /></div>
        <div><label asp-for="owner_name" class="form-label fw-bold"></label><input asp-for="owner_name" class="form-control" /></div>
        <div><label asp-for="manager_name" class="form-label fw-bold"></label><input asp-for="manager_name" class="form-control" /></div>
        <div><label asp-for="owner_type" class="form-label fw-bold"></label><input asp-for="owner_type" class="form-control" /></div>
        <div><label asp-for="quater" class="form-label fw-bold"></label><input asp-for="quater" class="form-control" type="number" /></div>
        <div><label asp-for="year" class="form-label fw-bold"></label><input asp-for="year" class="form-control" type="number" /></div>
        <div><label asp-for="mor" class="form-label fw-bold"></label><input asp-for="mor" class="form-control" /></div>
        <div><label asp-for="sales_area" class="form-label fw-bold"></label><input asp-for="sales_area" class="form-control" /></div>
        <div><label asp-for="sbm" class="form-label fw-bold"></label><input asp-for="sbm" class="form-control" /></div>
        <div><label asp-for="sam" class="form-label fw-bold"></label><input asp-for="sam" class="form-control" /></div>
        <div><label asp-for="type" class="form-label fw-bold"></label><input asp-for="type" class="form-control" /></div>
        <div><label asp-for="phone_number_1" class="form-label fw-bold"></label><input asp-for="phone_number_1" class="form-control" /></div>
        <div><label asp-for="phone_number_2" class="form-label fw-bold"></label><input asp-for="phone_number_2" class="form-control" /></div>
        <div><label asp-for="level" class="form-label fw-bold"></label><input asp-for="level" class="form-control" /></div>
        <div><label asp-for="latitude" class="form-label fw-bold"></label><input asp-for="latitude" class="form-control" type="number" step="any" /></div>
        <div><label asp-for="longitude" class="form-label fw-bold"></label><input asp-for="longitude" class="form-control" type="number" step="any" /></div>
        <div><label asp-for="audit_current" class="form-label fw-bold"></label><input asp-for="audit_current" class="form-control" /></div>
        <div>
            <label asp-for="audit_next" class="form-label fw-bold">Audit Berikutnya</label>
            <select asp-for="audit_next" class="form-select" asp-items="ViewBag.AuditLevels">
                <option value="">-- Pilih Audit Level --</option>
            </select>
            <span asp-validation-for="audit_next" class="text-danger small"></span>
        </div>
        <div><label asp-for="status_good" class="form-label fw-bold"></label><input asp-for="status_good" class="form-control" /></div>
        <div><label asp-for="status_excellent" class="form-label fw-bold"></label><input asp-for="status_excellent" class="form-control" /></div>
        <div><label asp-for="audit_current_score" class="form-label fw-bold"></label><input asp-for="audit_current_score" class="form-control" type="number" step="0.01" /></div>
        <div><label asp-for="audit_current_time" class="form-label fw-bold"></label><input asp-for="audit_current_time" class="form-control" type="datetime-local" /></div>
        <div><label asp-for="status" class="form-label fw-bold"></label><input asp-for="status" class="form-control" /></div>
        <div><label asp-for="wtms" class="form-label fw-bold"></label><input asp-for="wtms" class="form-control" type="number" step="0.01" /></div>
        <div><label asp-for="qq" class="form-label fw-bold"></label><input asp-for="qq" class="form-control" type="number" step="0.01" /></div>
        <div><label asp-for="wmef" class="form-label fw-bold"></label><input asp-for="wmef" class="form-control" type="number" step="0.01" /></div>
        <div><label asp-for="format_fisik" class="form-label fw-bold"></label><input asp-for="format_fisik" class="form-control" type="number" step="0.01" /></div>
        <div><label asp-for="cpo" class="form-label fw-bold"></label><input asp-for="cpo" class="form-control" type="number" step="0.01" /></div>

        <div class="mt-3">
            <button type="submit" class="btn btn-warning text-white">
                <i class="bi bi-save"></i> Update
            </button>
            <a asp-action="Index" class="btn btn-secondary ms-2">Kembali</a>
        </div>
    </div>
</form>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show mx-3" role="alert">
        <i class="bi bi-check-circle me-1"></i> @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        setTimeout(() => {
            const alert = document.querySelector('.alert-success');
            if (alert) alert.remove();
        }, 4000);
    </script>
}
