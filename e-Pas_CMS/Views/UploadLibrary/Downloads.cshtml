@model YourApp.Controllers.UploadLibraryController.DownloadsVm
@{
    ViewData["Title"] = Model.Title ?? "Downloads";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h4 class="mb-1">@Model.Title</h4>
            <div class="text-muted">Klik tombol <b>Start Download</b> untuk memulai (user action).</div>
        </div>
        <a class="btn btn-outline-secondary" href="@Model.BackUrl">Back</a>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="mb-2"><b>Request</b></div>
            <div class="p-3" style="background:#f8f9fa;border:1px solid #eee;border-radius:.35rem;">
                @Model.Description
            </div>

            <div class="mt-3 d-flex gap-2 flex-wrap">
                <a class="btn btn-primary" href="@Model.StartUrl">
                    Start Download
                </a>

                <a class="btn btn-outline-primary" href="@Model.StartUrl" target="_blank" rel="noopener">
                    Start Download (New Tab)
                </a>
            </div>

            <div class="text-muted mt-3" style="font-size:.9rem;">
                Notes:
                <ul class="mb-0">
                    <li>Download ZIP besar akan lebih stabil karena dipicu oleh klik user.</li>
                    <li>Jika server butuh waktu, tunggu sampai download muncul di browser.</li>
                </ul>
            </div>
        </div>
    </div>
</div>
