@section Scripts {
    <script>
        $(function() {
            // Toggle pilihan jawaban
            $(document).on('click', '.option-btn', function() {
                var nodeId = $(this).data('node-id');
                $('.option-btn[data-node-id="'+nodeId+'"]')
                    .removeClass('active bg-success text-white')
                    .addClass('btn-outline-secondary');
                $(this)
                    .removeClass('btn-outline-secondary')
                    .addClass('active bg-success text-white');
            });

            // Hitung ulang satu node (rekursif)
            function recalcNode($li) {
                var nodeId = $li.attr('id').replace('node-','');
                var weight = parseFloat($li.attr('data-weight')) || 0;
                var scoreX = 0;
                var map = { A:1, B:0.8, C:0.6, D:0.4, E:0.2, F:0 };
                var $grp = $li.find('.option-group[data-node-id="'+nodeId+'"]');
                if ($grp.length) {
                    var letter = $grp.find('.option-btn.active').data('score') || '';
                    scoreX = (map[letter] || 0) * weight;
                } else {
                    $li.find('> .card > .collapse > .card-body > ul > li').each(function() {
                        scoreX += recalcNode($(this));
                    });
                }
                $li.find('.score-x[data-node-id="'+nodeId+'"] strong').text(scoreX.toFixed(2));
                return scoreX;
            }

            // Hitung ulang semua root nodes
            function recalcAll() {
                $('ul.list-unstyled > li[id^="node-"]').each(function() {
                    recalcNode($(this));
                });
            }

            // AJAX update + recalc
            $(document).on('click', '.update-score-btn', function() {
                var nodeId  = $(this).data('node-id');
                var auditId = $(this).data('audit-id');
                var score   = $('.option-btn[data-node-id="'+nodeId+'"].active').data('score');
                var token   = $('input[name="__RequestVerificationToken"]').val();
                if (!score) return alert('Pilih jawaban dulu!');
                fetch('/Audit/UpdateScore', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': token
                    },
                    body: JSON.stringify({ NodeId: nodeId, AuditId: auditId, Score: score })
                })
                .then(async res => {
                    if (!res.ok) throw new Error(await res.text() || res.statusText);
                })
                .then(() => recalcAll())
                .catch(err => {
                    console.error(err);
                    alert('Gagal update nilai: ' + err.message);
                });
            });

            // Inisialisasi pada load
            recalcAll();
        });

        // Show carousel/modal untuk MediaNotes atau node media
        function showMediaPopup(mediaItems) {
            const container = document.getElementById('mediaModalBody');
            container.innerHTML = '';

            if (!mediaItems || mediaItems.length === 0) {
                container.innerHTML = '<p class="text-muted">Tidak ada media tersedia.</p>';
            } else if (mediaItems.length === 1) {
                const item = mediaItems[0];
                if (item.MediaType.toUpperCase() === 'IMAGE') {
                    const img = document.createElement('img');
                    img.src = item.MediaPath;
                    img.alt = "Gambar Dokumentasi";
                    img.className = 'img-fluid mb-3 rounded shadow-sm';
                    container.appendChild(img);
                } else {
                    const video = document.createElement('video');
                    video.src = item.MediaPath;
                    video.controls = true;
                    video.className = 'img-fluid mb-3 rounded shadow-sm';
                    container.appendChild(video);
                }
            } else {
                let carouselId = 'mediaCarousel';
                container.innerHTML = `
                    <div id="${carouselId}" class="carousel slide" data-bs-ride="carousel">
                        <div class="carousel-indicators">
                            ${mediaItems.map((_, i) => `<button type="button" data-bs-target="#${carouselId}" data-bs-slide-to="${i}" class="${i===0?'active':''}" aria-label="Slide ${i+1}"></button>`).join('')}
                        </div>
                        <div class="carousel-inner">
                            ${mediaItems.map((item, i) => `
                                <div class="carousel-item ${i===0?'active':''}">
                                    ${item.MediaType.toUpperCase()==='IMAGE'
                                        ? `<img src="${item.MediaPath}" class="d-block w-100 rounded shadow-sm" alt="Gambar">`
                                        : `<video class="d-block w-100 rounded shadow-sm" controls><source src="${item.MediaPath}" type="video/mp4"></video>`
                                    }
                                </div>
                            `).join('')}
                        </div>
                        <button class="carousel-control-prev" type="button" data-bs-target="#${carouselId}" data-bs-slide="prev">
                            <span class="carousel-control-prev-icon"></span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#${carouselId}" data-bs-slide="next">
                            <span class="carousel-control-next-icon"></span>
                        </button>
                    </div>
                `;
            }

            new bootstrap.Modal(document.getElementById('mediaModal')).show();
        }

        // Wrap final documents into carousel sama modal
        function showFinalMediaPopup(mediaType, mediaPath) {
            let list = Array.isArray(mediaPath)
                ? mediaPath
                : [{ MediaType: mediaType, MediaPath: mediaPath }];
            showMediaPopup(list);
        }
    </script>
}

@functions {
    void RenderChecklistNode(AuditChecklistNode node, int level, bool isVerified)
    {
        var collapseId = $"collapse-{node.Id}";
        var cardId = $"card-{node.Id}";
        var paddingClass = $"ps-{level * 3}";
        var displayScore = node.ScoreX ?? node.ScoreAF ?? 0m;

        <text>
            <li id="node-@node.Id" class="mb-3 @paddingClass" data-weight="@(node.Weight ?? 0)">
                <div class="card border-secondary">
                    <!-- HEADER: judul, deskripsi, skor -->
                    <div class="card-header bg-light d-flex align-items-center">
                        <a class="fw-bold text-dark flex-grow-1 text-decoration-none"
                           data-bs-toggle="collapse"
                           href="#@collapseId"
                           role="button"
                           aria-expanded="false"
                           aria-controls="@collapseId">
                            @node.Title
                            @if (!string.IsNullOrWhiteSpace(node.Description))
                            {
                                <small class="text-muted ms-2">@node.Description</small>
                            }
                        </a>
                        <div class="text-end score-x" data-node-id="@node.Id">
                            <small>Skor:</small>
                            <strong>@displayScore.ToString("0.00")</strong>
                            <i class="bi bi-chevron-right rotate-arrow ms-2"></i>
                        </div>
                    </div>

                    <!-- COLLAPSE BODY -->
                    <div id="@collapseId" class="collapse" data-bs-parent="#auditChecklist">
                        <div class="card-body">

                            @* -- QUESTION TYPE -- *@
                            @if (node.Type == "QUESTION")
                            {
                                <div class="mb-3 option-group d-flex gap-2 flex-wrap" data-node-id="@node.Id">
                                    @foreach (var opt in new[] { "A", "B", "C", "D", "E", "F" })
                                    {
                                        decimal val = opt switch
                                        {
                                            "A" => 1.00m,
                                            "B" => 0.80m,
                                            "C" => 0.60m,
                                            "D" => 0.40m,
                                            "E" => 0.20m,
                                            "F" => 0.00m,
                                            _ => 0m
                                        };
                                        var isActive = node.ScoreInput == opt;
                                        <button type="button"
                                                class="btn option-btn btn-sm
                                                       @(isActive    ? "active bg-success text-white" : "btn-outline-secondary")
                                                       @(isVerified ? "disabled" : "")"
                                                data-node-id="@node.Id"
                                                data-score="@opt"
                                        @(isVerified ? "disabled" : "")>
                                            @($"{opt} ({val:0.00})")
                                        </button>
                                    }
                                </div>
                                <div class="mb-3">
                                    <button type="button"
                                            class="btn btn-sm btn-secondary cancel-score-btn"
                                            data-node-id="@node.Id"
                                    @(isVerified ? "disabled" : "")>
                                        Batal
                                    </button>
                                    <button type="button"
                                            class="btn btn-sm btn-primary update-score-btn"
                                            data-node-id="@node.Id"
                                            data-audit-id="@ViewBag.AuditId"
                                    @(isVerified ? "disabled" : "")>
                                        Update Nilai
                                    </button>
                                </div>
                            }

                            @* -- MEDIA POPUP jika ada -- *@
                            @if (node.MediaItems?.Any() ?? false)
                            {
                                <div class="mb-3">
                                    <button type="button"
                                            class="btn btn-outline-primary btn-sm"
                                            onclick='showMediaPopup(@Html.Raw(JsonConvert.SerializeObject(node.MediaItems)))'>
                                        <i class="bi bi-image me-1"></i> Lihat Dokumentasi
                                    </button>
                                </div>
                            }

                            @* -- CHILDREN RECURSIVE -- *@
                            @if (node.Children?.Any() ?? false)
                            {
                                <ul class="list-unstyled mt-3">
                                    @foreach (var child in node.Children)
                                    {
                                        RenderChecklistNode(child, level + 1, isVerified);
                                    }
                                </ul>
                            }

                    </div>
                </div>
            </div>
        </li>
    </text>
;
    }
}


