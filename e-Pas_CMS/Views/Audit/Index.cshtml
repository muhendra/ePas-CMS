@model List<e_Pas_CMS.ViewModels.SpbuViewModel>

<h3 class="mb-4 fw-bold">Review Audit</h3>

<div class="mb-3">
    <input type="text" id="search-input" class="form-control" placeholder="🔍 Cari SPBU, Auditor, Status...">
</div>

<div class="d-flex justify-content-between mb-3">
    <div>Tanggal Submit: <strong class="text-primary">Minggu ini</strong></div>
    <div>Status: <strong class="text-primary">Semua</strong></div>
</div>

<div class="table-responsive">
    <table id="audit-table" class="table table-striped table-hover text-center align-middle">
        <thead class="table-light">
            <tr>
                <th>No</th>
                <th>No. SPBU</th>
                <th>Rayon</th>
                <th>Provinsi</th>
                <th>Kabupaten/Kota</th>
                <th>Alamat</th>
                <th>Tipe SPBU</th>
                <th>Tahun</th>
                <th>Audit</th>
                <th>Tipe Audit</th>
                <th>Tanggal Audit</th>
                <th>Score</th>
                <th>Status</th>
                <th>Good</th>
                <th>Excelent</th>
                <th>Komplain</th>
                <th>Banding</th>
                <th>Aksi</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                var item = Model[i];
                <tr>
                    <td>@(i + 1)</td>
                    <td>@item.NoSpbu</td>
                    <td>@item.Rayon</td>
                    <td>@item.Provinsi</td>
                    <td>@item.Kota</td>
                    <td>@item.Alamat</td>
                    <td>@item.TipeSpbu</td>
                    <td>@item.Tahun</td>
                    <td>@item.Audit</td>
                    <td>@item.Type</td>
                    <td>@item.TanggalSubmit.ToString("dd/MM/yyyy HH:mm")</td>
                    <td>@item.Score</td>
                    <td class="fw-bold text-@((item.Status == "PASS") ? "success" : "danger")">@item.Status</td>
                    <td class="text-success">@item.Good</td>
                    <td class="text-success">@item.Excelent</td>
                    <td class="text-@((item.Komplain == "ADA") ? "danger" : "success")">@item.Komplain</td>
                    <td class="text-@((item.Banding == "ADA") ? "danger" : "success")">@item.Banding</td>
                    <td>
                        <a class="btn btn-sm btn-outline-primary fw-semibold" asp-controller="Audit" asp-action="Detail" asp-route-id="@item.Id">
                            <i class="bi bi-eye"></i> Detail
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/simple-datatables@latest" defer></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const table = document.querySelector("#audit-table");
            const dataTable = new simpleDatatables.DataTable(table, {
                searchable: true,
                fixedHeight: true,
                perPage: 10
            });

            // Sinkronkan input search custom
            const searchInput = document.getElementById("search-input");
            if (searchInput) {
                searchInput.addEventListener("input", function () {
                    dataTable.search(this.value);
                });
            }
        });
    </script>
}
