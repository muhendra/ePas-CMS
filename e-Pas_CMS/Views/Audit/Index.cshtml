                                       asp-route-pageSize="@Model.PageSize"
                                       asp-route-searchTerm="@ViewBag.SearchTerm"
                                       asp-route-sortColumn="Score"
                                       asp-route-sortDirection="@(ViewBag.SortColumn == "Score" && ViewBag.SortDirection == "asc" ? "desc" : "asc")">
