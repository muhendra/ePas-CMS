@model List<e_Pas_CMS.ViewModels.SpbuViewModel>

@section Styles {
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" />
    <style>
        #audit-table_wrapper {
            overflow-x: auto;
        }

        table.dataTable {
            width: 100% !important;
        }
    </style>
}

<h3 class="mb-4 fw-bold">Review Audit</h3>

<div class="mb-3">
    <input type="text" id="search-input" class="form-control" placeholder="🔍 Cari SPBU, Auditor, Status...">
</div>

<div class="d-flex justify-content-between mb-3">
    <div>Tanggal Submit: <strong class="text-primary">Minggu ini</strong></div>
    <div>Status: <strong class="text-primary">Semua</strong></div>
</div>

<!-- HILANGKAN table-responsive -->
<table id="audit-table" class="table table-bordered table-striped nowrap display">
    <thead class="table-light">
        <tr>
            <th>Aksi</th>
            <th>No</th>
            <th>No. SPBU</th>
            <th>Auditor</th>
            <th>Rayon</th>
            <th>Provinsi</th>
            <th>Kabupaten/Kota</th>
            <th>Alamat</th>
            <th>Tipe SPBU</th>
            <th>Tahun</th>
            <th>Audit</th>
            <th>Tipe Audit</th>
            <th>Tanggal Audit</th>
            <th>Score</th>
            <th>Status</th>
            <th>Komplain</th>
            <th>Banding</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count; i++)
        {
            var item = Model[i];
            <tr>
                <td>
                    <a class="btn btn-sm btn-outline-primary fw-semibold"
                       asp-controller="Audit"
                       asp-action="Detail"
                       asp-route-id="@item.Id">
                        <i class="bi bi-eye"></i> Detail
                    </a>
                </td>
                <td>@(i + 1)</td>
                <td>@item.NoSpbu</td>
                <td>@item.NamaAuditor</td>
                <td>@item.Rayon</td>
                <td>@item.Provinsi</td>
                <td>@item.Kota</td>
                <td>@item.Alamat</td>
                <td>@item.TipeSpbu</td>
                <td>@item.Tahun</td>
                <td>@item.Audit</td>
                <td>@item.Type</td>
                <td>@item.TanggalSubmit.ToString("dd/MM/yyyy HH:mm")</td>
                <td>@item.Score.ToString("0.00")</td>
                <td class="fw-bold text-@((item.Status == "PASS" || item.Status == "VERIFIED") ? "success" : "danger")">@item.Status</td>
                <td class="text-@((item.Komplain == "ADA") ? "danger" : "success")">@item.Komplain</td>
                <td class="text-@((item.Banding == "ADA") ? "danger" : "success")">@item.Banding</td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            const table = $('#audit-table').DataTable({
                scrollX: true,
                autoWidth: false,
                pageLength: 10
            });

            $('#search-input').on('input', function () {
                table.search(this.value).draw();
            });
        });
    </script>
}
