                                            <i class="bi bi-arrow-@(ViewBag.SortDirection == "asc" ? "up" : "down")"></i>
                                        }
                                    </a>
                                </th>
                                <th>
                                    <a asp-action="Index"
                                       asp-route-pageNumber="1"
                                       asp-route-pageSize="@Model.PageSize"
                                       asp-route-searchTerm="@ViewBag.SearchTerm"
                                       asp-route-sortColumn="Excellent"
                                       asp-route-sortDirection="@(ViewBag.SortColumn == "Excellent" && ViewBag.SortDirection == "asc" ? "desc" : "asc")">
                                        Excellent
                                        @if (ViewBag.SortColumn == "Excellent")
