                                       asp-route-sortColumn="Audit"
                                       asp-route-sortDirection="@(ViewBag.SortColumn == "Audit" && ViewBag.SortDirection == "asc" ? "desc" : "asc")">
                                        Status Audit
                                        @if (ViewBag.SortColumn == "Audit")
                                        {
                                            <i class="bi bi-arrow-@(ViewBag.SortDirection == "asc" ? "up" : "down")"></i>
                                        }
                                    </a>
                                </th>
                                <th>
                                    <a asp-action="Index"
                                       asp-route-pageNumber="1"
                                       asp-route-pageSize="@Model.PageSize"
                                       asp-route-searchTerm="@ViewBag.SearchTerm"
                                       asp-route-sortColumn="TipeAudit"
                                       asp-route-sortDirection="@(ViewBag.SortColumn == "TipeAudit" && ViewBag.SortDirection == "asc" ? "desc" : "asc")">
                                        Tipe Audit
                                        @if (ViewBag.SortColumn == "TipeAudit")
                                        {
                                            <i class="bi bi-arrow-@(ViewBag.SortDirection == "asc" ? "up" : "down")"></i>
                                        }
                                    </a>
                                </th>
                                <th>
                                    <a asp-action="Index"
