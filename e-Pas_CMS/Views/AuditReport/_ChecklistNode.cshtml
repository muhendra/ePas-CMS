@using e_Pas_CMS.ViewModels
@using Newtonsoft.Json
@model AuditChecklistNode

@{
    bool isVerified = ViewBag.IsVerified ?? false;
    bool isReadonlyUser = ViewBag.IsReadonlyUser ?? false;
    string auditId = ViewBag.AuditId as string;
}

<div class="ms-@(Model.Type == "QUESTION" ? 4 : 2) mb-3">
    <div class="d-flex justify-content-between align-items-start">
        <div>
            <strong>@Model.Title</strong>
            @if (!string.IsNullOrEmpty(Model.Description))
            {
                <div class="text-muted small">@Model.Description</div>
            }
        </div>

        @if (Model.Type == "QUESTION")
        {
            <div class="d-flex flex-wrap gap-2">
                @if (Model.MediaItems?.Any() ?? false)
                {
                    <button type="button" class="btn btn-outline-primary btn-sm"
                            onclick='showMediaPopup(@Html.Raw(JsonConvert.SerializeObject(Model.MediaItems)))'>
                        <i class="bi bi-image me-1"></i> Lihat Dokumentasi
                    </button>
                }

                @if (!isReadonlyUser && !isVerified)
                {
                    <form asp-controller="Audit"
                          asp-action="UploadDocument"
                          asp-route-nodeId="@Model.Id"
                          asp-route-auditId="@auditId"
                          enctype="multipart/form-data"
                          method="post"
                          class="d-flex align-items-center">
                        <input type="file" name="file" class="form-control form-control-sm me-2" required />
                        <button type="submit" class="btn btn-sm btn-secondary">Upload</button>
                    </form>
                }
            </div>
        }
    </div>

    @if (Model.Children?.Any() ?? false)
    {
        <div class="mt-2 ms-3 border-start border-2 ps-3">
            @foreach (var child in Model.Children)
            {
                @Html.Partial("_ChecklistNodePartial", child, new ViewDataDictionary(ViewData)
        {
        { "IsVerified", isVerified },
        { "IsReadonlyUser", isReadonlyUser },
        { "AuditId", auditId }
        })
            }
        </div>
    }
</div>
