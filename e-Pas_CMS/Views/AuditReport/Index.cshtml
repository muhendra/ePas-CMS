@model List<e_Pas_CMS.ViewModels.AuditReportListViewModel>

<h3 class="mb-4 fw-bold">Laporan Audit</h3>

<div class="mb-3">
    <input type="text" id="search-input" class="form-control" placeholder="🔍 Cari SPBU, Auditor, Status...">
</div>

<div class="d-flex justify-content-between mb-3">
    <div>Tanggal Submit: <strong class="text-primary">Minggu ini</strong></div>
    <div>Status: <strong class="text-primary">Semua</strong></div>
</div>

<div class="table-responsive">
    <table id="audit-table" class="table table-striped table-hover text-center align-middle">
        <thead class="table-light">
            <tr>
                <th>No</th>
                <th>No. SPBU</th>
                <th>Region</th>
                <th>Provinsi</th>
                <th>Kota</th>
                <th>Alamat</th>
                <th>SBM</th>
                <th>SAM</th>
                <th>Tahun</th>
                <th>Tanggal Audit</th>
                <th>Tanggal Submit</th>
                <th>Auditor</th>
                <th>Score</th>
                <th>Good</th>
                <th>Excellent</th>
                <th>WTMS</th>
                <th>Q&Q</th>
                <th>WMEF</th>
                <th>Format Fisik</th>
                <th>CPO</th>
                <th>Kelas SPBU</th>
                <th>Aksi</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                var item = Model[i];
                <tr>
                    <td>@(i + 1)</td>
                    <td>@item.SpbuNo</td>
                    <td>@item.Region</td>
                    <td>@item.Province</td>
                    <td>@item.City</td>
                    <td>@item.Address</td>
                    <td>@item.SBM</td>
                    <td>@item.SAM</td>
                    <td>@item.Year</td>
                    <td>@item.AuditDate?.ToString("dd/MM/yyyy")</td>
                    <td>@item.SubmitDate?.ToString("dd/MM/yyyy HH:mm")</td>
                    <td>@item.Auditor</td>
                    <td>@item.Score</td>
                    <td class="text-@(item.GoodStatus == "CERTIFIED" ? "success" : "danger")">@item.GoodStatus</td>
                    <td class="text-@(item.ExcellentStatus == "CERTIFIED" ? "success" : "danger")">@item.ExcellentStatus</td>
                    <td>@item.WTMS</td>
                    <td>@item.QQ</td>
                    <td>@item.WMEF</td>
                    <td>@item.FormatFisik</td>
                    <td>@item.CPO</td>
                    <td>@item.KelasSpbu</td>
                    <td>
                        <a class="btn btn-sm btn-outline-primary fw-semibold"
                           asp-controller="AuditReport" asp-action="Detail" asp-route-id="@item.TrxAuditId">
                            <i class="bi bi-eye"></i> Detail
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/simple-datatables@latest" defer></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const table = document.querySelector("#audit-table");
            const dataTable = new simpleDatatables.DataTable(table, {
                searchable: true,
                fixedHeight: true,
                perPage: 10
            });

            // Custom search box
            const searchInput = document.getElementById("search-input");
            if (searchInput) {
                searchInput.addEventListener("input", function () {
                    dataTable.search(this.value);
                });
            }
        });
    </script>
}
