            margin-left: 250px;
            padding: 2rem;
            width: calc(100% - 250px);
            transition: margin-left .3s;
        }

        .sidebar-bottom {
            margin-bottom: 1rem;
            text-align: center;
        }

        /* group & caret */
        .menu-group {
            margin-top: .65rem;
            border-radius: 12px;
        }

        .menu-trigger {
            display: flex;
            align-items: center;
            justify-content: space-between;
            border-radius: 12px;
            padding: .55rem .75rem;
            cursor: pointer;
        }

            .menu-trigger .chev {
                transition: transform .2s ease;
            }

        .menu-group.open .menu-trigger .chev {
            transform: rotate(180deg);
        }

        /* open: parent + submenu hitam */
        .menu-group.open {
            background: #140F10;
        }

            .menu-group.open .menu-trigger {
                background: #140F10;
                color: #EDEDED;
            }

                .menu-group.open .menu-trigger:hover {
                    background: #140F10;
                    color: #fff;
                }

            .menu-group.open strong {
                color: #EDEDED;
            }

            .menu-group.open .menu-trigger i {
                color: #EDEDED;
            }

        /* panel submenu */
        .submenu-panel {
            background: #140F10;
            border-radius: 12px;
            padding: .35rem .4rem .45rem;
            margin: .1rem .25rem .25rem;
        }

            .submenu-panel .nav {
                gap: 2px;
            }

            .submenu-panel .nav-link {
                color: #EDEDED;
                background: transparent;
                border-radius: 8px;
                padding: .45rem .6rem;
                display: flex;
                align-items: center;
                gap: .55rem;
            }

                .submenu-panel .nav-link .dot {
                    width: 6px;
                    height: 6px;
                    border: 2px solid #EDEDED;
                    border-radius: 50%;
                    flex: 0 0 auto;
                }

                .submenu-panel .nav-link:hover {
                    background: rgba(255,255,255,.12);
                    color: #fff;
                }

                .submenu-panel .nav-link.active {
                    background: rgba(255,255,255,.18);
                    color: #fff;
                    font-weight: 600;
                }

        .sidebar-overlay {
            display: none;
            position: fixed;
            inset: 0;
            background: rgba(0,0,0,.5);
            z-index: 1030;
        }

        .toggle-sidebar {
            display: none;
            position: fixed;
            top: 1rem;
            left: 1rem;
            z-index: 1040;
            font-size: 1.75rem;
            background: none;
            border: none;
            color: #FFC80A;
        }

        @@media (max-width:768px) {
            .sidebar {
                transform: translateX(-100%);
            }

                .sidebar.active {
                    transform: translateX(0);
                }

            .sidebar-overlay.active {
                display: block;
            }

            .content-wrapper {
                margin-left: 0 !important;
                width: 100% !important;
            }

            .toggle-sidebar {
                display: block;
            }
        }

        .navbar {
            position: sticky;
            top: 0;
            z-index: 1020;
            background: #fff;
        }

        .modal {
            z-index: 1055 !important;
        }

        .modal-backdrop {
            z-index: 1050 !important;
        }
    </style>
</head>
