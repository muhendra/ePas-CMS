                        <div class="ms-auto text-end">
                            <small>Skor:</small>
                            <strong class="score-x text-dark" data-node-id="@node.Id">@totalScore.ToString("0.00")</strong>
                        </div>
                    }


                </div>


                <!-- COLLAPSE BODY -->
                <div id="@collapseId" class="collapse">
                    <div class="card-body">
                        @if (node.Type == "QUESTION")
                        {
                            // @if (!isReadonlyUser)
