@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="utf-8" />
    <title>Login - E-PAS PERTAMINA</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

    <style>
        body, html {
            height: 100%;
            margin: 0;
            font-family: 'Segoe UI', sans-serif;
        }

        .login-container {
            display: flex;
            height: 100vh;
            overflow: hidden;
        }

        .login-left {
            background-color: #ffc700;
            flex: 1;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            padding: 3rem;
        }

            .login-left .logo img {
                max-height: 120px;
                margin-bottom: 2rem;
            }

        .form-box {
            width: 100%;
            max-width: 360px;
        }

            .form-box h2 {
                font-size: 1.3rem;
                font-weight: 600;
                margin-bottom: 1.5rem;
            }

        .form-control {
            border-radius: 10px;
            border: none;
            margin-bottom: 1rem;
            padding: 0.85rem 1rem;
            font-size: 1rem;
            box-shadow: 0 0 0 1px #ced4da;
        }

        .input-group .form-control {
            margin-bottom: 0;
            border-top-right-radius: 0;
            border-bottom-right-radius: 0;
        }

        .input-group .btn {
            border-top-left-radius: 0;
            border-bottom-left-radius: 0;
            box-shadow: 0 0 0 1px #ced4da;
        }

        /* Hilangkan ikon mata bawaan browser */
        input[type="password"]::-ms-reveal,
        input[type="password"]::-ms-clear {
            display: none !important;
        }

        input[type="password"]::-webkit-credentials-auto-fill-button,
        input[type="password"]::-webkit-reveal-password-button {
            display: none !important;
        }

        .btn-login {
            background-color: #007bff;
            color: #fff;
            font-weight: 600;
            padding: 0.75rem;
            font-size: 1rem;
            border-radius: 999px;
            border: none;
        }

            .btn-login:hover {
                background-color: #0069d9;
            }

        .forgot-password {
            font-size: 0.9rem;
            text-align: right;
            margin-bottom: 1.5rem;
        }

        .login-right {
            background-color: #f8f9fa;
            flex: 1;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 2rem;
        }

            .login-right img {
                max-width: 500px;
                width: 100%;
                height: auto;
            }

        /* Warna aktif ikon mata */
        .active-eye {
            color: #007bff;
        }

        @@media (max-width: 768px) {
            .login-container {
                flex-direction: column;
            }

            .login-left, .login-right {
                width: 100%;
                height: auto;
            }

                .login-right img {
                    max-width: 80%;
                }
        }
    </style>
</head>
<body>
    <div class="login-container">
        <!-- Kiri: Form -->
        <div class="login-left">
            <div class="logo">
                <img src="https://epas-assets.zarata.co.id//uploads/logo.png" alt="Logo E-PAS Pertamina" />
            </div>
            <div class="form-box text-start">
                <h2>Salam,<br />Silakan login ke akun kamu</h2>

                @* Alert dari ModelState *@
                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger">
                        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                        {
                            <div>@error.ErrorMessage</div>
                        }
                    </div>
                }

                <form method="post" action="/Auth/Login">
                    <input type="text" name="username" class="form-control" placeholder="Email" required />

                    <!-- Password + tombol mata -->
                    <div class="input-group mb-3">
                        <input type="password" name="password" id="password" class="form-control" placeholder="Password" required />
                        <button type="button" class="btn btn-light" id="togglePassword" aria-label="Tampilkan/Sembunyikan password">
                            <i class="bi bi-eye" id="eyeIcon"></i>
                        </button>
                    </div>

                    <div class="forgot-password">
                        <a href="#">Lupa kata sandi</a>
                    </div>
                    <button type="submit" class="btn btn-login w-100">Login</button>
                </form>
            </div>
        </div>

        <!-- Kanan: Ilustrasi -->
        <div class="login-right">
            <img src="https://epas-assets.zarata.co.id//uploads/orang-duduk.png" alt="Ilustrasi Orang dengan Laptop" />
        </div>
    </div>

    <!-- Script toggle show/hide password -->
    <script>
        (function () {
            const toggleBtn = document.getElementById("togglePassword");
            const pwdInput = document.getElementById("password");
            const eyeIcon = document.getElementById("eyeIcon");

            toggleBtn.addEventListener("click", function (e) {
                e.preventDefault();
                const isHidden = pwdInput.getAttribute("type") === "password";
                pwdInput.setAttribute("type", isHidden ? "text" : "password");
                eyeIcon.classList.toggle("active-eye", isHidden);
            });
        })();
    </script>
</body>
</html>
